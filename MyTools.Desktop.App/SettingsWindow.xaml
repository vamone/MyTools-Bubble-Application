<Window x:Class="MyTools.Desktop.App.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyTools.Desktop.App"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="310" Width="310" Loaded="Window_Loaded">
    <Grid Margin="0,0,10,0">
        <Slider x:Name="OpacitySlider" Margin="10,10,0,0" VerticalAlignment="Top" Value="6" ValueChanged="OpacitySlider_ValueChanged"/>
        <TextBox x:Name="ClipBoardsEditor" Height="201" Margin="10,33,0,0" AcceptsReturn="True"  TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button x:Name="SaveSettingsButton" Content="Save" HorizontalAlignment="Right" Margin="0,239,10,0" VerticalAlignment="Top" Width="75" Click="SaveSettingsButton_Click"/>
    </Grid>
</Window>
