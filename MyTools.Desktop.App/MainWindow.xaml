<Window x:Class="MyTools.Desktop.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyTools.Desktop.App"
        mc:Ignorable="d"
        AllowsTransparency="True" 
        WindowStyle="None" 
        ResizeMode="NoResize" 
        Topmost="False"
        Title="MainWindow" Height="500" Width="500" Loaded="Window_Loaded">

    <Window.Background>
        <SolidColorBrush Opacity="0" Color="White"/>
    </Window.Background>

    <Grid x:Name="GridMain" Margin="0">
        <StackPanel Orientation="Vertical" VerticalAlignment="Bottom" Margin="0">
            <Label x:Name="ActionNotificationText" />
   
            <StackPanel x:Name="WorkArea" Orientation="Vertical" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,0,10"/>

            <Ellipse Visibility="Collapsed" x:Name="MainIconArea" Fill="#FF9F9FA4" HorizontalAlignment="Left" Height="100" Margin="0" Stroke="Black" VerticalAlignment="Top" Width="100"/>
        </StackPanel>
        <Button x:Name="ButtonMinimizedWindow" Content="Minimize" HorizontalAlignment="Left" Margin="31,141,0,0" VerticalAlignment="Top" Width="75" Click="ButtonMinimizedWindow_Click" Visibility="Collapsed"/>
    </Grid>
</Window>
